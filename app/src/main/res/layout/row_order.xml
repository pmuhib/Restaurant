<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="afterDescendants">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDate"
            style="@style/DarkGreyMediumTextViewStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:layout_gravity="center"
            android:text="2016-08-07"/>
        <TextView
            android:id="@+id/tvTableNo"
            style="@style/DarkGreyMediumTextViewStyle"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:layout_gravity="center"
            android:text="T1"/>
        <TextView
            android:id="@+id/tvOrderValue"
            style="@style/DarkGreyMediumTextViewStyle"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:layout_gravity="center"
            android:text="$13"/>
        <TextView
            android:id="@+id/tvOrderTime"
            style="@style/DarkGreyMediumTextViewStyle"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:layout_gravity="center"
            android:text="8:00 pm"/>

        <TextView
            android:id="@+id/tvWaiterName"
            style="@style/DarkGreyMediumTextViewStyle"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:layout_gravity="center"
            android:text="Jane Doe"
             />

        <TextView
            android:id="@+id/tvFeedback"
            style="@style/DarkGreyMediumTextViewStyle"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/dp_10"
            android:layout_gravity="center"
            android:padding="@dimen/dp_3"
            android:background="@drawable/btn_bg_feedback"
            android:textColor="@color/colorWhite"
            android:text="Feedback"/>
        <TextView
            android:id="@+id/tvDetail"
            style="@style/DarkGreyMediumTextViewStyle"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:padding="@dimen/dp_3"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/dp_10"
            android:layout_gravity="center"
            android:background="@drawable/btn_bg_detail"
            android:textColor="@color/colorWhite"
            android:text="Details"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tvPrint"
            style="@style/DarkGreyMediumTextViewStyle"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:padding="@dimen/dp_3"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/dp_10"
            android:layout_gravity="center"
            android:background="@drawable/btn_bg_detail"
            android:textColor="@color/colorWhite"
            android:text="Print"/>
    </LinearLayout>
</LinearLayout>