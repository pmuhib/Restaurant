<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/table_bg"
    tools:context="com.tabqy1.fragments.HomeDeliveryFragment">
<LinearLayout
    android:layout_width="@dimen/dp_350"
    android:orientation="vertical"
    android:layout_margin="@dimen/dp_10"
    android:background="@color/colorWhite"
    android:layout_gravity="center"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:text="@string/customer_details"
        android:padding="@dimen/dp_12"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="false"
        android:layout_weight="1"
        android:layout_height="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_marginTop="@dimen/dp_5"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="0dp"
                 android:layout_weight=".8"
                 android:padding="@dimen/dp_10"
                 android:textAppearance="?android:textAppearanceSmall"
                 android:textColor="@android:color/black"
                 android:text="@string/order_id"
                 android:layout_height="wrap_content" />

             <EditText
                 android:id="@+id/et_order_id"
                 android:layout_width="0dp"
                 android:layout_weight="1.2"
                 android:padding="@dimen/dp_10"
                 android:textAppearance="?android:textAppearanceSmall"
                 android:layout_marginRight="@dimen/dp_5"
                 android:singleLine="true"
                 android:maxLines="1"
                 android:background="@drawable/edit_text_bg"
                 android:textColor="@android:color/black"
                 android:inputType="none"
                 android:layout_height="wrap_content" />

         </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:padding="@dimen/dp_10"
                android:text="@string/date"
                android:textColor="@android:color/black"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_date"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:padding="@dimen/dp_10"
                android:textAppearance="?android:textAppearanceSmall"
                android:inputType="none"
                android:singleLine="true"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/edit_text_bg"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:padding="@dimen/dp_10"
                android:text="Time"
                android:textColor="@android:color/black"
                android:textAppearance="?android:textAppearanceSmall"

                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_time"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:padding="@dimen/dp_10"
                android:inputType="none"
                android:textColor="@android:color/black"
                android:textAppearance="?android:textAppearanceSmall"
                android:singleLine="true"
                android:maxLines="1"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/edit_text_bg"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:padding="@dimen/dp_10"
                android:textColor="@android:color/black"
                android:textAppearance="?android:textAppearanceSmall"

                android:text="@string/customer_name"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_customer_name"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:padding="@dimen/dp_10"
                android:singleLine="true"
                android:maxLines="1"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/black"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/edit_text_bg"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:padding="@dimen/dp_10"
                android:text="@string/customer_ph_no"
                android:textColor="@android:color/black"
                android:textAppearance="?android:textAppearanceSmall"

                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_customer_ph_no"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:padding="@dimen/dp_10"
                android:hint="xxxxxxxxxxxxx"
                android:maxLength="15"
                android:inputType="phone"
                android:singleLine="true"
                android:maxLines="1"
                android:textAppearance="?android:textAppearanceSmall"

                android:textColor="@android:color/black"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/edit_text_bg"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:padding="@dimen/dp_10"
                android:textColor="@android:color/black"
                android:textAppearance="?android:textAppearanceSmall"
                android:text="@string/customer_address"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_customer_address"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:padding="@dimen/dp_10"
                android:singleLine="true"
                android:maxLines="1"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/black"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/edit_text_bg"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:padding="@dimen/dp_10"
                android:textColor="@android:color/black"
                android:textAppearance="?android:textAppearanceSmall"
                android:text="@string/total_cost"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_total_cost"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:padding="@dimen/dp_10"
                android:inputType="none"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/edit_text_bg"
                android:singleLine="true"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_submit"
        android:textColor="@android:color/white"
        android:text="@string/submit"
        android:layout_margin="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:textAppearance="?android:textAppearanceMedium"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
</FrameLayout>
