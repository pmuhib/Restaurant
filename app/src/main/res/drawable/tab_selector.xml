<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
    android:color="@color/colorPrimary" /> <!-- pressed -->
    <item android:state_selected="true"
        android:color="@color/colorPrimary" /> <!-- selected -->
    <item android:state_selected="false"
        android:color="@color/colorDarkGrey" /> <!-- unselected -->
    <item android:state_focused="true"
        android:color="@color/colorPrimary" /> <!-- focused -->
    <item android:color="@color/colorDarkGrey" /> <!-- default -->
</selector>